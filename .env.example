# ================================
# IP WHISPERER CONFIGURATION
# ================================
# Copy this to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================
# Blockchain Configuration
# ================================
# Story Protocol Aeneid Testnet RPC (current active testnet)
STORY_RPC_URL=https://aeneid.storyrpc.io

# Your wallet private key (without 0x prefix)
WALLET_PRIVATE_KEY=your_private_key_here

# Chain ID for Story Protocol Aeneid testnet
STORY_CHAIN_ID=1315

# ================================
# API Keys
# ================================
# OpenAI or abv.dev API key for GenAI features
OPENAI_API_KEY=sk-your_openai_key_here

# abv.dev specific (GenAI IP Registration Challenge)
ABV_API_KEY=sk
ABV_BASE_URL=https://app.abv.dev
ABV_REGION=us

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Twitter/X API Credentials (for semantic search)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Crossmint (for wallet abstraction)
CROSSMINT_CLIENT_ID=your_crossmint_client_id_here
CROSSMINT_API_KEY=your_crossmint_api_key_here

# Goldsky (for subgraph queries)
GOLDSKY_API_KEY=
# GOOGLE search 
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
# Pinata (for IPFS uploads)
PINATA_JWT=your_pinata_jwt_here

# ================================
# Application Settings
# ================================
# Scanning interval in minutes
SCAN_INTERVAL_MINUTES=5

# Similarity threshold for infringement detection (0.0 to 1.0)
SIMILARITY_THRESHOLD=0.80

# Maximum results to fetch per scan
MAX_SCAN_RESULTS=10

# Enable verbose logging
DEBUG_MODE=true

# ================================
# Optional: Redis for Session Management
# ================================
REDIS_URL=redis://localhost:6379

# ================================
# Optional: Webhook URLs
# ================================
WEBHOOK_URL=https://your-domain.com/webhook
ALERT_WEBHOOK_URL=https://hooks.slack.com/your_webhook_here
